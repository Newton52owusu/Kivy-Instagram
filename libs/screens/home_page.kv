#: import gch kivy.utils.get_color_from_hex
#: import StoryCreator libs.components.story_creator.StoryCreator
#: import BottomNav libs.components.bottom_nav.BottomNav 


<HomePage>:
    md_bg_color: get_color_from_hex("FFFFFf")

    MDBoxLayout:
        orientation: 'vertical'

        #Appbar
        AppBar:

        MDBoxLayout:

            ScrollView:
                bar_width: 0

                MDBoxLayout:
                    orientation: 'vertical'
                    adaptive_height : True
                    id: timeline

                    ScrollView:
                    size_hint_y: None
                    height: 110
                    bar_width: 0

                        MDBoxLayout:
                            adaptive_width: True
                            spacing: 5
                            padding: 5

                            #Story Creator
                            StoryCreator:
                                avatar: root.profile_picture

                            MDBoxLayout:
                                adaptive_width: True
                                padding: 5
                                spacing: 5
                                id: stories
                        
                        MDSeparator:

        # Bottom Navigation Bar
        BottomNav:
            avatar: root.profile_picture
